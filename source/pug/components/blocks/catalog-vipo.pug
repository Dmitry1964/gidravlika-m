      .container
        .catalog-vipo__wrapper
          ul.catalog-vipo__list
            each item in catalogItems
              li.catalog-vipo__item
                a(href=item.href)
                  .catalog-vipo__item-image
                    +picture(item.path, item.image, item.format, item.width, item.height, item.alt)
                  h2.catalog-vipo__item-title=item.title
