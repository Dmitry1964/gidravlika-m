mixin breadcrumbs(breadcrumbs, isButton)
  .breadcrumbs
    .container
      .breadcrumbs__wrapper
        div.breadcrumbs__links
          each item in breadcrumbs
            if item.href !== "#"
              a(href = item.href).breadcrumbs__link=item.name
            else
              a(href = item.href).breadcrumbs__link.active=item.name
        if isButton
          button.breadcrumbs__btn
